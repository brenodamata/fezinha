<div class="page-header">
  <h1>Fezinhas enviadas!</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Sortudo</th>
      <th>Email</th>
      <th>Fezinha</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= link_to bet.user.name, user_path(bet.user) %></td>
        <td><%= bet.user.email %></td>
        <td><%= eval(bet.numbers).join(' ') %></td>
        <td><%= bet.sent %></td>
      </tr>
    <% end %>
  </tbody>
</table>
